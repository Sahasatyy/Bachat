@using DataModel.Model;
@using DataAccess.Service;

@page "/home";
<NavMenu/>

<style>

    body {
    background-color: azure;
    }


    .stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    margin-bottom: 20px;
    }

    .stat-card {
    background: white;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .stat-card h3 {
    font-size: 16px;
    color: #777;
    margin-bottom: 5px;
    }

    .stat-card p {
    font-size: 20px;
    font-weight: bold;
    }

    .transactions-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 20px;
    }

    .pending-debts-card h4 {
    font-size: 18px;
    margin-bottom: 10px;
    }

    .pending-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
    padding: 10px;
    border: 1px solid #eee;
    border-radius: 5px;
    }

    .pending-item .details {
    font-size: 14px;
    }

    .pending-item .amount {
    font-weight: bold;
    }

    .pending-item button {
    background-color: transparent;
    border: none;
    font-size: 16px;
    cursor: pointer;
    margin-left: 5px;
    }

    .Transactions-card h4 {
    font-size: 18px;
    margin-bottom: 10px;
    }

    .transaction-item {
    display: flex;
    flex-direction: column; 
    margin-bottom: 10px;
    padding: 10px;
    border: 1px solid #eee;
    border-radius: 5px;
    }

    .transaction-item table {
    width: 100%;
    border-collapse: collapse; 
    margin-top: 10px;
    }

    .transaction-item th,
    .transaction-item td {
    padding: 10px 15px; 
    text-align: left;
    border: 1px solid #ddd; 
    }

    .transaction-item th {
    background-color: #f9f9f9;
    font-size: 14px;
    font-weight: bold;
    }

    .transaction-item td {
    font-size: 14px;
    color: #333;
    }

    .transaction-item .amount {
    font-weight: bold;
    }

    .transaction-item button {
    background-color: transparent;
    border: none;
    font-size: 16px;
    cursor: pointer;
    margin-left: 5px;
    }

    .transaction-item button.edit {
    color: #007BFF; 
    }

    .transaction-item button.delete {
    color: #FF0000; 
    }

    .Debt-card h4 {
    font-size: 18px;
    margin-bottom: 10px;
    }

    .debt-item {
    display: flex;
    flex-direction: column;
    margin-bottom: 10px;
    padding: 10px;
    border: 1px solid #eee;
    border-radius: 5px;
    }

    .debt-item table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 10px;
    }

    .debt-item th,
    .debt-item td {
    padding: 10px 15px;
    text-align: left;
    border: 1px solid #ddd;
    }

    .debt-item th {
    background-color: #f9f9f9;
    font-size: 14px;
    font-weight: bold;
    }

    .debt-item td {
    font-size: 14px;
    color: #333;
    }

    .debt-item .amount {
    font-weight: bold;
    }

    .debt-item button {
    background-color: transparent;
    border: none;
    font-size: 16px;
    cursor: pointer;
    margin-left: 5px;
    }

    .debt-item button.edit {
    color: #007BFF;
    }

    .debt-item button.delete {
    color: #FF0000;
    }



</style>

<div class="stats-grid">
    <div class="stat-card">
        <h3>Total Inflow</h3>
        <p>Rs. @totalcredit</p>
    </div>
    <div class="stat-card">
        <h3>Total Outflow</h3>
        <p>Rs. @totaldebit</p>
    </div>
    <div class="stat-card">
        <h3>Current Balance</h3>
        <p>Rs. @currentBalance</p>
    </div>
    <div class="stat-card">
        <h3>Total Debts</h3>
        <p>Rs. @totaldebt</p>
    </div>
    <div class="stat-card">
        <h3>Cleared Debts</h3>
        <p>Rs. @cleareddebt</p>
    </div>
    <div class="stat-card">
        <h3>Remaining Debts</h3>
        <p>Rs. @remainingdebt</p>
    </div>
</div>

<div class="Transactions-card">
    <h4>Transaction History</h4>
    <div class="transaction-item">
        <table>
            <thead>

                <tr>
                    <th>Date</th>
                    <th>Amount</th>
                    <th>type</th>
                    <th>Tag</th>
                    <th>Notes</th>
                    <th>Actions</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var transaction in Transactions)
                {
                    <tr>
                        <td>@transaction.TransactionDate</td>
                        <td>@transaction.TransactionAmount</td>
                        <td>@transaction.TransactionType</td>
                        <td>@transaction.TransactionTag</td>
                        <td>@transaction.TransactionNotes</td>
                        <td>
                            <button class="edit" @onclick="() => UpdateTransactions(transaction.TransactionId)">EDIT</button>
                            <button class="delete" @onclick="()=>DeleteTransaction(transaction.TransactionId)">DELETE</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="Debt-card">
    <h4>Debt History</h4>
    <div class="debt-item">
        <table>
            <thead>

                <tr>
                    <th>Amount</th>
                    <th>Startdate</th>
                    <th>Duedate</th>
                    <th>Source</th>
                    <th>Notes</th>
                    <th>Actions</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var debt in Debts)
                {
                    <tr>
                        <td>@debt.DebtAmount</td>
                        <td>@debt.DebtStartDate</td>
                        <td>@debt.DebtDueDate</td>
                        <td>@debt.DebtSource</td>
                        <td>@debt.DebtNotes</td>
                        <td>
                                <button class="edit" @onclick="() => UpdateDebts(debt.DebtId)">EDIT</button>
                            <button class="delete" @onclick="()=>DeleteDebt(debt.DebtId)">CLEARED</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="chart-container">
    <div class="chart-heading">
        <h3>Top Ten Income</h3>
    </div>
    <MudChart ChartType="ChartType.Donut" Width="300px" Height="300px"
              InputData="@Top10income"
              InputLabels="@Top10incomelabel"></MudChart>

    <div class="chart-heading">
        <h3>Top Ten Expenses</h3>
    </div>
    <MudChart ChartType="ChartType.Donut" Width="300px" Height="300px"
              InputData="@Top10expense"
              InputLabels="@Top10expenselabel"></MudChart>
</div>

<style>
    .chart-container {
        display: flex;
        justify-content: space-between;
        gap: 20px;
        align-items: flex-start;
        flex-wrap: wrap;
    }

    .chart-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .chart-heading {
        margin-bottom: 10px;
    }
</style>











